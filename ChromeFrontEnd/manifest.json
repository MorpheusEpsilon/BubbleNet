{
  "manifest_version": 3,
  "name": "Bubble Net",
  "version": "2.0",
  "description": "Blocks unsafe websites and keeps your kids safe online.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"  
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "blocked.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

